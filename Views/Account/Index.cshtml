@model inventario_coprotab.ViewModels.LoginViewModel;

@{
    ViewData["Title"] = "Inventario Sistemas";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta content="" name="author - Cristian Solano" />
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
   

    <link href="~/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.min.css" rel="stylesheet" />





</head>
<body class="pace-top bg-white">

    <!-- begin #page-loader -->
    <div id="page-loader" class="fade show"><span class="spinner"></span></div>
    <!-- end #page-loader -->
    <!-- begin #page-container -->
    <div id="page-container" class="fade">
        <!-- begin login -->
        <div class="login login-with-news-feed">

            <!-- begin news-feed -->
            <div class="news-feed">
                <div class="news-image"><img src="~/img/coprotab/tabaco.jpg" style="object-fit:cover" /></div>
                <div class="news-caption">
                    <h4 class="caption-title"><b>Sistema</b> Inventario</h4>
                    <p>
                        Sistemas
                    </p>
                </div>
            </div>
            <!-- end news-feed -->
            <!-- begin right-content -->
            <div class="right-content">
                <!-- begin login-header -->
                <div class="login-header">
                    <div class="brand">
                        <a href="javascript:;"><img src="~/img/coprotab/LogoCope.png" alt="" height="50" /></a> <b>COPROTAB</b>
                        <small>Cooperativa de Productores Tabacaleros de Salta Ltda.</small>
                    </div>
                    <div class="icon">
                        <i class="fa fa-sign-in"></i>
                    </div>
                </div>
                <!-- end login-header -->
                <!-- begin login-content -->
                @if (TempData["Error"] != null)
                {
                    <div class="col-md-10 alert alert-danger" style="margin-top:1rem; margin-inline:auto">
                        <span><b>Error!</b> - @TempData["Error"]</span>
                    </div>
                }

                <div class="login-content">
                    <form asp-action="Index" class="margin-bottom-0">
                        @* <form class="margin-bottom-0"> *@

                        <div class="form-group m-b-15">
                            <input asp-for="Email" type="text" class="form-control form-control-lg" placeholder="Usuario" required autofocus />                            
                        </div>

                        <div class="form-group m-b-15">
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Contraseña" required />
                        </div>

                        @* <div class="checkbox checkbox-css m-b-30">
                            <input asp-for="RememberMe" type="checkbox" id="remember_me_checkbox"/>
                            <label for="remember_me_checkbox">
                                Recordarme
                            </label>
                        </div> *@
                        <div class="m-b-30"></div>
                        <div class="login-buttons">
                            <button type="submit" class="btn btn-success btn-block btn-lg">Ingresar</button>
                        </div>
                        @*<div class="m-t-20 m-b-40 p-b-40 text-inverse">
                        No recuerda sus Credenciales? Click <a href="register_v3.html" class="text-success">aquí</a> para recuperar.
                        </div>*@
                        <hr />
                        <p class="text-center text-grey-darker">
                            &copy; COPROTAB todos los derechos reservados 2025
                        </p>
                    </form>
                </div>

                <!-- end login-content -->
            </div>
            <!-- end right-container -->
        </div>
        <!-- end login -->
    </div>
    <!-- end page container -->
    


    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.slimscroll.min.js"></script>
    <script src="~/js/js.cookie.js"></script>
    <script src="~/js/default.min.js"></script>
    <script src="~/js/apps.min.js"></script>

    

    <script>
        $(document).ready(function () {
            App.init();
        });
    </script>

</body>
</html>