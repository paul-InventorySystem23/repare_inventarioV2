@model inventario_coprotab.ViewModels.DispositivoCreateViewModel

<form asp-action="CreateModal" asp-controller="Dispositivo" method="post" id="formDispositivo">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Nombre" class="form-label fw-bold">
                <i class="bi bi-tag"></i> Nombre del Dispositivo
            </label>
            <input asp-for="Nombre" class="form-control" placeholder="Ej: Laptop Dell Latitude" />
            <span asp-validation-for="Nombre" class="text-danger small"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="IdMarca" class="form-label fw-bold">
                <i class="bi bi-bookmark"></i> Marca
            </label>
            <div class="input-group">
                <select asp-for="IdMarca" class="form-select" asp-items="ViewBag.IdMarca"></select>
                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#createMarcaModal">
                    <i class="bi bi-plus"></i>
                </button>
            </div>
            <span asp-validation-for="IdMarca" class="text-danger small"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="IdTipo" class="form-label fw-bold">
                <i class="bi bi-cpu"></i> Tipo de Dispositivo
            </label>
            <select asp-for="IdTipo" class="form-select" asp-items="ViewBag.IdTipo" id="IdTipoCreate" onchange="actualizarFormularioCreate()"></select>
            <span asp-validation-for="IdTipo" class="text-danger small"></span>
        </div>

        <div class="col-md-6 mb-3" id="campo-cantidad-create" style="display: none;">
            <label asp-for="CantidadInicial" class="form-label fw-bold">
                <i class="bi bi-boxes"></i> Cantidad Inicial
            </label>
            <input asp-for="CantidadInicial" class="form-control" type="number" min="1" placeholder="Ej: 100" />
            <span asp-validation-for="CantidadInicial" class="text-danger small"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label fw-bold">
            <i class="bi bi-card-text"></i> Descripción
        </label>
        <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción detallada del dispositivo..."></textarea>
        <span asp-validation-for="Descripcion" class="text-danger small"></span>
    </div>

    <div class="row">
        <div class="col-md-12 mb-3">
            <label class="form-label fw-bold">
                <i class="bi bi-upc"></i> Código de Inventario
            </label>
            <div class="alert alert-info mb-0 py-2">
                <i class="bi bi-info-circle"></i> Se generará automáticamente al guardar (Ej: INV-2025-0001)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 mb-3">
            <label asp-for="NroSerie" class="form-label fw-bold">
                <i class="bi bi-hash"></i> Número de Serie
            </label>
            <input asp-for="NroSerie" class="form-control" placeholder="Ej: SN123456789" />
            <span asp-validation-for="NroSerie" class="text-danger small"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Estado" class="form-label fw-bold">
            <i class="bi bi-circle-fill"></i> Estado
        </label>
        <select asp-for="Estado" class="form-select" asp-items="@(new SelectList(ViewBag.EstadosDisponibles, Model.Estado))">
            <option value="">-- Seleccionar Estado --</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger small"></span>
    </div>

    <div class="modal-footer border-0 pt-4">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bi bi-x-circle"></i> Cancelar
        </button>
        <button type="submit" class="btn btn-primary-custom">
            <i class="bi bi-save"></i> Guardar Dispositivo
        </button>
    </div>
</form>

<!-- Modal para crear marca -->
<div class="modal fade" id="createMarcaModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header modal-header-custom">
                <h5 class="modal-title"><i class="bi bi-plus-circle"></i> Nueva Marca</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="nombreMarca" class="form-label fw-bold">Nombre de la Marca</label>
                    <input type="text" class="form-control" id="nombreMarca" placeholder="Ej: Dell, HP, Lenovo..." required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary-custom" onclick="crearMarca()">
                    <i class="bi bi-save"></i> Guardar
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function actualizarFormularioCreate() {
        var tipoSelect = document.getElementById('IdTipoCreate');
        var cantidadDiv = document.getElementById('campo-cantidad-create');
        var selectedValue = tipoSelect ? tipoSelect.value : '';

        if (selectedValue === "2") {
            cantidadDiv.style.display = 'block';
            var input = cantidadDiv.querySelector('input');
            if (input) input.required = true;
        } else {
            cantidadDiv.style.display = 'none';
            var input = cantidadDiv.querySelector('input');
            if (input) {
                input.required = false;
                input.value = '';
            }
        }
    }

    setTimeout(function() {
        actualizarFormularioCreate();

        // Validación jQuery Unobtrusive
        var form = $('#formDispositivo');
        if (form.length > 0) {
            $.validator.unobtrusive.parse(form);
        }
    }, 100);

    function crearMarca() {
        var nombre = document.getElementById('nombreMarca').value.trim();
        if (!nombre) {
            alert('El nombre es obligatorio');
            return;
        }

        var token = $('input[name="__RequestVerificationToken"]').val();

        fetch(baseUrl+'Marca/CreateAjax', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': token
            },
            body: JSON.stringify({ nombre: nombre })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                var select = document.getElementById('IdMarca');
                var option = document.createElement('option');
                option.value = data.id;
                option.text = data.nombre;
                option.selected = true;
                select.appendChild(option);

                $('#createMarcaModal').modal('hide');
                document.getElementById('nombreMarca').value = '';
                alert('Marca creada exitosamente');
            } else {
                var errorMsg = data.errors?.join('\n') || 'Error desconocido';
                alert('Error al crear la marca:\n' + errorMsg);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error de red al crear la marca');
        });
    }
</script>