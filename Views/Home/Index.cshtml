@model inventario_coprotab.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard - Inicio";
}

<!-- ============ ENCABEZADO DE BIENVENIDA ============ -->
<div class="card-custom p-4 mb-4" style="background: linear-gradient(135deg, var(--primary-color) 0%, #34495E 100%); color: white;">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-person-circle"></i> Hola, <strong>@Model.NombreUsuario</strong>
            </h2>
            <p class="mb-0 opacity-75">
                <i class="bi bi-envelope"></i> @Model.EmailUsuario
            </p>
        </div>
        <div class="text-end">
            <h4 class="mb-0">
                <i class="bi bi-calendar-event"></i> @Model.FechaActual.ToString("dd/MM/yyyy")
            </h4>
            <p class="mb-0 opacity-75">@Model.FechaActual.ToString("dddd", new System.Globalization.CultureInfo("es-ES"))</p>
        </div>
    </div>
</div>

<!-- ============ TARJETAS DE ESTADÍSTICAS ============ -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card-custom p-3 text-center" style="border-left: 4px solid var(--primary-color);">
            <i class="bi bi-laptop" style="font-size: 2.5rem; color: var(--primary-color);"></i>
            <h3 class="mt-2 mb-0 fw-bold">@Model.TotalDispositivos</h3>
            <small class="text-muted">Total Dispositivos</small>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card-custom p-3 text-center" style="border-left: 4px solid var(--success-color);">
            <i class="bi bi-gear-fill" style="font-size: 2.5rem; color: var(--success-color);"></i>
            <h3 class="mt-2 mb-0 fw-bold">@Model.TotalComponentes</h3>
            <small class="text-muted">Componentes</small>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card-custom p-3 text-center" style="border-left: 4px solid var(--secondary-color);">
            <i class="bi bi-geo-alt-fill" style="font-size: 2.5rem; color: var(--secondary-color);"></i>
            <h3 class="mt-2 mb-0 fw-bold">@Model.TotalUbicaciones</h3>
            <small class="text-muted">Ubicaciones</small>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card-custom p-3 text-center" style="border-left: 4px solid var(--warning-color);">
            <i class="bi bi-arrow-left-right" style="font-size: 2.5rem; color: var(--warning-color);"></i>
            <h3 class="mt-2 mb-0 fw-bold">@Model.MovimientosHoy</h3>
            <small class="text-muted">Movimientos Hoy</small>
        </div>
    </div>
</div>

<!-- ============ ALERTAS ============ -->
@if (Model.DispositivosSinUbicacion > 0 || Model.ComponentesStockBajo > 0 || Model.DispositivosStockBajo > 0)
{
    <div class="card-custom p-4 mb-4" style="border-left: 4px solid var(--accent-color);">
        <h5 class="mb-3" style="color: var(--accent-color);">
            <i class="bi bi-bell-fill"></i> Alertas del Sistema
        </h5>
        <div class="row">
            @if (Model.DispositivosSinUbicacion > 0)
            {
                <div class="col-md-4 mb-2">
                    <div class="alert alert-warning mb-0 d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <span><strong>@Model.DispositivosSinUbicacion</strong> dispositivos sin ubicación</span>
                    </div>
                </div>
            }
            @if (Model.ComponentesStockBajo > 0)
            {
                <div class="col-md-4 mb-2">
                    <div class="alert alert-danger mb-0 d-flex align-items-center">
                        <i class="bi bi-box-seam me-2"></i>
                        <span><strong>@Model.ComponentesStockBajo</strong> componentes con stock bajo</span>
                    </div>
                </div>
            }
            @if (Model.DispositivosStockBajo > 0)
            {
                <div class="col-md-4 mb-2">
                    <div class="alert alert-danger mb-0 d-flex align-items-center">
                        <i class="bi bi-laptop me-2"></i>
                        <span><strong>@Model.DispositivosStockBajo</strong> dispositivos con stock bajo</span>
                    </div>
                </div>
            }
        </div>
    </div>
}

<!-- ============ GRÁFICOS ============ -->
<div class="row mb-4">
    <div class="col-md-6 mb-3">
        <div class="card-custom p-4">
            <h5 class="mb-3">
                <i class="bi bi-geo-alt"></i> Dispositivos por Ubicación
            </h5>
            <canvas id="chartDispositivosPorUbicacion" style="max-height: 300px;"></canvas>
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <div class="card-custom p-4">
            <h5 class="mb-3">
                <i class="bi bi-cpu"></i> Dispositivos por Tipo
            </h5>
            <canvas id="chartDispositivosPorTipo" style="max-height: 300px;"></canvas>
        </div>
    </div>
</div>

<!-- ============ ACCESOS RÁPIDOS ============ -->
<div class="card-custom p-4 mb-4">
    <h5 class="mb-3">
        <i class="bi bi-lightning-fill"></i> Accesos Rápidos
    </h5>
    <div class="row g-2">
        <div class="col-md-3 col-sm-6">
            <a asp-controller="Dispositivo" asp-action="Index" class="btn btn-primary-custom w-100">
                <i class="bi bi-laptop"></i> Dispositivos
            </a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a asp-controller="Dispositivo" asp-action="Index" class="btn btn-success-custom w-100">
                <i class="bi bi-gear"></i> Componentes
            </a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a asp-controller="Equipos" asp-action="Index" class="btn btn-info w-100 text-white">
                <i class="bi bi-pc-display"></i> Crear Equipo
            </a>
        </div>
        <div class="col-md-3 col-sm-6">
            <a asp-controller="Ubicacion" asp-action="Index" class="btn btn-warning-custom w-100">
                <i class="bi bi-geo-alt"></i> Ubicaciones
            </a>
        </div>
    </div>
</div>

<!-- ============ ACTIVIDAD RECIENTE ============ -->
<div class="card-custom p-4">
    <h5 class="mb-3">
        <i class="bi bi-clock-history"></i> Actividad Reciente
    </h5>
    @if (Model.ActividadesRecientes.Any())
    {
        <div class="list-group">
            @foreach (var actividad in Model.ActividadesRecientes)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi @actividad.Icono me-2" style="color: var(--secondary-color);"></i>
                        <span>@actividad.Descripcion</span>
                    </div>
                    <small class="text-muted">
                        <i class="bi bi-clock"></i> @actividad.Fecha.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mb-0">
            <i class="bi bi-info-circle"></i> No hay actividad reciente registrada.
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Serializar datos del ViewModel
        const dataUbicacion = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.DispositivosPorUbicacion));
        const dataTipo = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.DispositivosPorTipo));

        const colores = [
            'rgba(52, 152, 219, 0.8)',
            'rgba(39, 174, 96, 0.8)',
            'rgba(243, 156, 18, 0.8)',
            'rgba(231, 76, 60, 0.8)',
            'rgba(155, 89, 182, 0.8)',
            'rgba(52, 73, 94, 0.8)',
        ];

        // 📊 Dispositivos por Ubicación (Bar Chart)
        new Chart(document.getElementById('chartDispositivosPorUbicacion'), {
            type: 'bar',
            data: {
                labels: dataUbicacion.map(x => x.Label),
                datasets: [{
                    label: 'Dispositivos',
                    data: dataUbicacion.map(x => x.Cantidad),
                    backgroundColor: colores,
                    borderWidth: 1
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                scales: { y: { beginAtZero: true, ticks: { stepSize: 1 } } }
            }
        });

        // 🥧 Dispositivos por Tipo (Pie Chart)
        new Chart(document.getElementById('chartDispositivosPorTipo'), {
            type: 'pie',
            data: {
                labels: dataTipo.map(x => x.Label),
                datasets: [{
                    data: dataTipo.map(x => x.Cantidad),
                    backgroundColor: colores,
                    borderWidth: 1
                }]
            },
            options: {
                plugins: { legend: { position: 'bottom' } }
            }
        });
    </script>
}
