@model inventario_coprotab.Models.DBInventario.Relacion

<div class="container-fluid">
    <div class="row">
        <!-- Información General -->
        <div class="col-md-12 mb-3">
            <div class="card-custom p-3">
                <h6 class="fw-bold mb-3" style="color: var(--secondary-color);">
                    <i class="bi bi-info-circle"></i> Información General
                </h6>
                <div class="row">
                    <div class="col-md-4">
                        <p>
                            <strong><i class="bi bi-hash"></i> ID Relación:</strong><br>
                            <span class="badge bg-secondary">#@Model.IdRelacion</span>
                        </p>
                    </div>
                    <div class="col-md-4">
                        <p>
                            <strong><i class="bi bi-calendar"></i> Fecha de Creación:</strong><br>
                            @Model.Fecha.ToString("dd/MM/yyyy")
                        </p>
                    </div>
                    <div class="col-md-4">
                        <p>
                            <strong><i class="bi bi-person"></i> Responsable:</strong><br>
                            @{
                                var responsable = Model.RelacionDetalles?.FirstOrDefault()?.IdDispositivoNavigation?.RelacionDispositivoComponentes?.FirstOrDefault()?.IdResponsableNavigation;
                                if (responsable != null)
                                {
                                    <span class="badge bg-info">@responsable.Nombre @responsable.Apellido</span>
                                }
                                else
                                {
                                    <span class="text-muted">Sin responsable asignado</span>
                                }
                            }
                        </p>
                    </div>
                </div>

                @{
                    var observaciones = Model.RelacionDetalles?.FirstOrDefault()?.IdDispositivoNavigation?.RelacionDispositivoComponentes?.FirstOrDefault()?.Observaciones;
                    if (!string.IsNullOrEmpty(observaciones))
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <p>
                                    <strong><i class="bi bi-chat-left-text"></i> Observaciones:</strong><br>
                                    <span class="text-muted">@observaciones</span>
                                </p>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Dispositivo Principal -->
        <div class="col-md-12 mb-3">
            <div class="card-custom p-3">
                <h6 class="fw-bold mb-3" style="color: var(--secondary-color);">
                    <i class="bi bi-laptop"></i> Dispositivo Principal
                </h6>
                @if (Model.RelacionDetalles != null && Model.RelacionDetalles.Any())
                {
                    var detalle = Model.RelacionDetalles.FirstOrDefault();
                    if (detalle?.IdDispositivoNavigation != null)
                    {
                        var dispositivo = detalle.IdDispositivoNavigation;
                        <div class="row">
                            <div class="col-md-4">
                                <p>
                                    <strong>Nombre:</strong><br>
                                    @dispositivo.Nombre
                                </p>
                            </div>
                            <div class="col-md-4">
                                <p>
                                    <strong>Número de Serie:</strong><br>
                                    <code>@(dispositivo.NroSerie ?? "Sin serie")</code>
                                </p>
                            </div>
                            <div class="col-md-4">
                                <p>
                                    <strong>Tipo:</strong><br>
                                    <span class="badge" style="background-color: var(--secondary-color);">
                                        @(dispositivo.IdTipoNavigation?.Descripcion ?? "Sin tipo")
                                    </span>
                                </p>
                            </div>
                        </div>
                        @if (dispositivo.IdMarcaNavigation != null)
                        {
                            <div class="row">
                                <div class="col-md-4">
                                    <p>
                                        <strong>Marca:</strong><br>
                                        <span class="badge" style="background-color: var(--success-color);">
                                            @dispositivo.IdMarcaNavigation.Nombre
                                        </span>
                                    </p>
                                </div>
                                <div class="col-md-4">
                                    <p>
                                        <strong>Estado:</strong><br>
                                        @if (dispositivo.Estado == "Nuevo")
                                        {
                                            <span class="badge badge-custom" style="background-color: var(--success-color);">
                                                <i class="bi bi-star-fill"></i> @dispositivo.Estado
                                            </span>
                                        }
                                        else if (dispositivo.Estado == "En uso")
                                        {
                                            <span class="badge badge-custom" style="background-color: var(--secondary-color);">
                                                <i class="bi bi-check-circle-fill"></i> @dispositivo.Estado
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-custom" style="background-color: var(--warning-color);">
                                                <i class="bi bi-exclamation-circle-fill"></i> @dispositivo.Estado
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle"></i> No hay dispositivo asignado
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-warning mb-0">
                        <i class="bi bi-exclamation-triangle"></i> No hay detalles disponibles
                    </div>
                }
            </div>
        </div>

        <!-- Componentes del Equipo -->
        <div class="col-md-12">
            <div class="card-custom p-3">
                <h6 class="fw-bold mb-3" style="color: var(--success-color);">
                    <i class="bi bi-gear-fill"></i> Componentes del Equipo
                </h6>
                @if (Model.RelacionDetalles != null && Model.RelacionDetalles.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead style="background-color: var(--success-color); color: white;">
                                <tr>
                                    <th>Nombre</th>
                                    <th>Número de Serie</th>
                                    <th>Tipo</th>
                                    <th>Marca</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detalle in Model.RelacionDetalles)
                                {
                                    if (detalle?.IdComponenteNavigation != null)
                                    {
                                        var componente = detalle.IdComponenteNavigation;
                                        <tr>
                                            <td>@componente.Nombre</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(componente.NroSerie))
                                                {
                                                    <code>@componente.NroSerie</code>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin serie</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge" style="background-color: var(--secondary-color);">
                                                    @(componente.IdTipoNavigation?.Descripcion ?? "Sin tipo")
                                                </span>
                                            </td>
                                            <td>
                                                @if (componente.IdMarcaNavigation != null)
                                                {
                                                    <span class="badge" style="background-color: var(--success-color);">
                                                        @componente.IdMarcaNavigation.Nombre
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin marca</span>
                                                }
                                            </td>
                                            <td>
                                                @if (componente.Estado == "Nuevo")
                                                {
                                                    <span class="badge badge-custom" style="background-color: var(--success-color);">
                                                        <i class="bi bi-star-fill"></i> @componente.Estado
                                                    </span>
                                                }
                                                else if (componente.Estado == "En uso")
                                                {
                                                    <span class="badge badge-custom" style="background-color: var(--secondary-color);">
                                                        <i class="bi bi-check-circle-fill"></i> @componente.Estado
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-custom" style="background-color: var(--warning-color);">
                                                        <i class="bi bi-exclamation-circle-fill"></i> @(componente.Estado ?? "N/A")
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mb-0">
                        <i class="bi bi-exclamation-triangle"></i> No hay componentes asociados a este equipo
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="modal-footer border-0 pt-4">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="bi bi-x-circle"></i> Cerrar
    </button>
    <button type="button" class="btn btn-warning-custom" onclick="$('#modalDetalleEquipo').modal('hide'); abrirModalEditarEquipo(@Model.IdRelacion);">
        <i class="bi bi-pencil"></i> Editar
    </button>
</div>