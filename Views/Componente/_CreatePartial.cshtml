@model inventario_coprotab.ViewModels.ComponenteCreateViewModel

<form asp-action="CreateModal" asp-controller="Componente" method="post" id="formComponente">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Nombre" class="form-label fw-bold">
                <i class="bi bi-tag"></i> Nombre del Componente
            </label>
            <input asp-for="Nombre" class="form-control" placeholder="Ej: Procesador Intel Core i7" />
            <span asp-validation-for="Nombre" class="text-danger small"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="IdMarca" class="form-label fw-bold">
                <i class="bi bi-bookmark"></i> Marca
            </label>
            <div class="input-group">
                <select asp-for="IdMarca" class="form-select" asp-items="ViewBag.IdMarca"></select>
                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#createMarcaModalComp">
                    <i class="bi bi-plus"></i>
                </button>
            </div>
            <span asp-validation-for="IdMarca" class="text-danger small"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="IdTipo" class="form-label fw-bold">
                <i class="bi bi-cpu"></i> Tipo de Componente
            </label>
            <select asp-for="IdTipo" class="form-select" asp-items="ViewBag.IdTipo"></select>
            <span asp-validation-for="IdTipo" class="text-danger small"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Cantidad" class="form-label fw-bold">
                <i class="bi bi-box-seam"></i> Cantidad
            </label>
            <input asp-for="Cantidad" class="form-control" type="number" min="1" value="1" />
            <span asp-validation-for="Cantidad" class="text-danger small"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label fw-bold">
            <i class="bi bi-card-text"></i> Descripción
        </label>
        <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción detallada del componente..."></textarea>
        <span asp-validation-for="Descripcion" class="text-danger small"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="NroSerie" class="form-label fw-bold">
                <i class="bi bi-hash"></i> Número de Serie
            </label>
            <input asp-for="NroSerie" class="form-control" placeholder="Ej: SN987654321" />
            <span asp-validation-for="NroSerie" class="text-danger small"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="FechaInstalacion" class="form-label fw-bold">
                <i class="bi bi-calendar"></i> Fecha de Instalación
            </label>
            <input asp-for="FechaInstalacion" class="form-control" type="date" />
            <span asp-validation-for="FechaInstalacion" class="text-danger small"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Estado" class="form-label fw-bold">
            <i class="bi bi-circle-fill"></i> Estado
        </label>
        <select asp-for="Estado" class="form-select" asp-items="@(new SelectList(ViewBag.EstadosDisponibles, Model.Estado))">
            <option value="">-- Seleccionar Estado --</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger small"></span>
    </div>

    <div class="modal-footer border-0 pt-4">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bi bi-x-circle"></i> Cancelar
        </button>
        <button type="submit" class="btn btn-success-custom">
            <i class="bi bi-save"></i> Guardar Componente
        </button>
    </div>
</form>

<!-- Modal para crear marca -->
<div class="modal fade" id="createMarcaModalComp" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header modal-header-custom">
                <h5 class="modal-title"><i class="bi bi-plus-circle"></i> Nueva Marca</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="nombreMarcaComp" class="form-label fw-bold">Nombre de la Marca</label>
                    <input type="text" class="form-control" id="nombreMarcaComp" placeholder="Ej: Intel, AMD, Kingston..." required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success-custom" onclick="crearMarcaComponente()">
                    <i class="bi bi-save"></i> Guardar
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        var form = $('#formComponente');
        if (form.length) {
            $.validator.unobtrusive.parse(form);
        }
    });

    $(document).on('submit', '#formComponente', function(e) {
        e.preventDefault();
        var form = $(this);
        $.ajax({
            url: form.attr('action'),
            type: 'POST',
            data: form.serialize(),
            success: function(response) {
                if (response.success) {
                    $('#modalComponente').modal('hide');
                    location.reload();
                } else {
                    $('#modalComponenteContenido').html(response);
                }
            },
            error: function() {
                alert('Error al procesar la solicitud');
            }
        });
    });

    function crearMarcaComponente() {
        var nombre = document.getElementById('nombreMarcaComp').value.trim();
        if (!nombre) {
            alert('El nombre es obligatorio');
            return;
        }

        var token = $('input[name="__RequestVerificationToken"]').val();

        fetch('/Marca/CreateAjax', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': token
            },
            body: JSON.stringify({ nombre: nombre })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                var select = document.querySelector('#formComponente select[name="IdMarca"]');
                var option = document.createElement('option');
                option.value = data.id;
                option.text = data.nombre;
                option.selected = true;
                select.appendChild(option);

                $('#createMarcaModalComp').modal('hide');
                document.getElementById('nombreMarcaComp').value = '';
                alert('Marca creada exitosamente');
            } else {
                var errorMsg = data.errors?.join('\n') || 'Error desconocido';
                alert('Error al crear la marca:\n' + errorMsg);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error de red al crear la marca');
        });
    }
</script>